<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Elluxhinz Taggers</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #363636; /* Dark gray background */
            color: #FFFFFF; /* White text color */
            text-align: center;
        }
        .title {
            font-size: 36px;
            margin-top: 100px;
        }
        .button {
            font-size: 18px;
            padding: 10px 20px;
            background-color: #00008B; /* Dark blue button color */
            color: #FFFFFF;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 20px;
        }
        .button:hover {
            background-color: #0000CD; /* Lighter blue on hover */
        }
        .hidden {
            display: none;
        }
    </style>
</head>
<body>
    <div id="main-menu">
        <h1 class="title">Elluxhinz Taggers : Main Menu</h1>
        <button class="button" onclick="changeStatus()">Status</button>
    </div>
    <div id="status-menu" class="hidden">
        <h1 class="title">Elluxhinz Taggers : Status</h1>
        <button id="statusButton" class="button" onclick="showGoBack()">Status : Not Released</button>
        <button id="goBackButton" class="button hidden" onclick="goBack()">Go Back?</button>
    </div>

    <script>
        function changeStatus() {
            document.getElementById('main-menu').classList.add('hidden');
            document.getElementById('status-menu').classList.remove('hidden');
        }

        function showGoBack() {
            document.getElementById('statusButton').textContent = 'Status : Released';
            document.getElementById('goBackButton').classList.remove('hidden');
        }

        function goBack() {
            document.getElementById('statusButton').textContent = 'Status : Not Released';
            document.getElementById('goBackButton').classList.add('hidden');
            document.getElementById('status-menu').classList.add('hidden');
            document.getElementById('main-menu').classList.remove('hidden');
        }
    </script>
</body>
</html>
